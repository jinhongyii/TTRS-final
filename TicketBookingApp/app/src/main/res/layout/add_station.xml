<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/add_station">

    <EditText
        android:id="@+id/stationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_station" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/time_arrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_time_arrival" />
        <EditText
            android:id="@+id/time_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_time_start" />
        <EditText
            android:id="@+id/time_stopover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_time_stopover"/>
    </LinearLayout>

</LinearLayout>